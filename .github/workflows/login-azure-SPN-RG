on: [push]

name: AzureLoginSample

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Log in with Azure
        uses: azure/login@v1
        with:
          creds: '${{ secrets.AZURE_CREDENTIALS }}'

      - name: Deploy Azure Resources with Bicep
        run: |
          az bicep build -f bicep/main.bicep
          az deployment group create --resource-group azure-training-rg --template-file main.json
        env:
          storageAccountName: FirstStorageAccount
          location: West Europe
